@inject Services.CompanyFilter CompanyFilter


<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">ServiceManager</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-1">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-1">
            <NavLink class="nav-link" href="@productLink" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Product
            </NavLink>
        </li>
        <li class="nav-item px-1">
            <NavLink class="nav-link disabled" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Product Images
            </NavLink>
        </li>
        <li class="nav-item px-1">
            <NavLink class="nav-link" href="@productGroupLink" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Groups
            </NavLink>
        </li>
        <li class="nav-item px-1">
            <NavLink class="nav-link" href="@productCategoryLink" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Categories
            </NavLink>
        </li>
        <li class="nav-item px-1">
            <NavLink class="nav-link" href="@productSubcategoryLink" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Subcategories
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private string productLink =>  CompanyFilter != null ? CompanyFilter.Slug + "/product" : "";
    private string productGroupLink =>  CompanyFilter != null ? CompanyFilter.Slug + "/product/group" : "";
    private string productCategoryLink =>  CompanyFilter != null ? CompanyFilter.Slug + "/product/category" : "";
    private string productSubcategoryLink =>  CompanyFilter != null ? CompanyFilter.Slug + "/product/subcategory" : "";
    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
    
}
